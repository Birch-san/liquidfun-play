{
  "compilerOptions": {
    "baseUrl": ".",

    // if you're tired of snowpack's TS build warning that protocol/index.d.ts
    // doesn't exist (when src/main tries to import types from src/protocol)
    // you can do a one-off `tsc --build src/main/tsconfig.json`
    // to emit some .d.ts to disk.
    // but otherwise this stuff about what/where to output is unused.
    "outDir": "../../dist/protocol",
    "declaration": true,
    "declarationMap": true,

    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "strict": true,
    "skipLibCheck": true
  }
}